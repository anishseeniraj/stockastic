{% include "/partials/header.html.jinja" %}
    <h1>{{ticker}} Stock Price Prediction - K Neighbors Regression</h1>

    <p>Enter a future date that you want the prediction on</p>

    <form action="/knn/predict" method="POST">
      <label>
        Enter the year -
      </label>
      <input type="number" name="year" placeholder="2020" />
      <label>
        Enter the month -
      </label>
      <input type="number" name="month" placeholder="12" />
      <label>
        Enter the date -
      </label>
      <input type="number" name="day" placeholder="31" />
      <input type="hidden" name="ticker" value="{{ticker}}" />
      <input type="hidden" name="split" value="{{split}}" />
      <input type="hidden" name="neighbors" value="{{neighbors}}" />
      <input type="hidden" name="weights" value="{{weights}}" />
      <input type="hidden" name="power" value="{{power}}" />
      <input type="submit" />
    </form>

    <div class="chart" id="plot_knn">
      <script>
        var graphs = {{knn_plot | safe}};

        Plotly.plot("plot_knn", graphs, {});
      </script>
    </div>
